    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "express-validator": "^7.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "isomorphic-dompurify": "^2.6.0",
    "webidl-conversions": "^7.0.0",
    "whatwg-url": "^11.0.0"
